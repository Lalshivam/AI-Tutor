{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext", // REQUIRED with "module": "nodenext"
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    
    // ✅ Emit compiled JS files
    "noEmit": false,

    // ✅ Required for React frontend code (safe to leave in)
    "jsx": "react-jsx"
  },
  "include": ["*.ts"]
}



